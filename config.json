      "IDLE": "..."
    }
  },
  "actions": {
    "exit": {
      "id": "exit",
      "keywords": [
        "BYE",
        "EXIT",
        "BYE",
        "BYE BYE",
        "TCHAU",
        "TCHAU TCHAU",
        "SAIR",
        "FECHAR",
        "TERMINAR",
        "ENCERRAR"
      ]
    },
    "learn": {
      "id": "learn",
      "keywords": [
        "LEARN",
        "APRENDA"
      ]
    },
    "dump": {
      "id": "dump",
      "keywords": [
        "DUMP",
        "SHOW MEMORY DATA",
        "MOSTRAR A MEMORIA"
      ]
    }
  }
}