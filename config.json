{
  "memory": {
    "text_file_path": "memory.txt"
  },
  "transcriptor": {
    "device": "cuda",
    "language": "pt",
    "batch_size": 16,
    "compute_type": "float16",
    "model_name": "medium"
  },
  "mic": {
    "audio_file": "cache.mp3",
    "device_index": 4,
    "frame_length": 512,
    "silence_frames": 60,
